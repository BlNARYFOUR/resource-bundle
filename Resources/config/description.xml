<?xml version="1.0" encoding="UTF-8"?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="cmf_resource.registry.container.class"></parameter>
    </parameters>

    <services>

        <service id="cmf_resource.description.factory" class="Symfony\Cmf\Component\Resource\Description\DescriptionFactory">
            <argument /> <!-- enhancers -->
        </service>

        <service id="cmf_resource.description.enhancer.sonata_admin" class="Symfony\Cmf\Component\Resource\Description\Enhancer\Sonata\AdminEnhancer">
            <argument type="service" id="sonata_admin.pool" />
            <argument type="service" id="router" />
            <tag name="cmf_resource.description.enhancer" alias="sonata_admin" />
        </service>

    </services>
</container>

