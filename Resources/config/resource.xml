<?xml version="1.0" encoding="UTF-8"?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>

        <parameter key="cmf_resource.phpcrodm_auto_route_listener.class">Symfony\Cmf\Bundle\ResourceBundle\Doctrine\Phpcr\AutoRouteListener</parameter>
        <parameter key="cmf_resource.adapter.phpcr_odm.class">Symfony\Cmf\Bundle\ResourceBundle\Adapter\PhpcrOdmAdapter</parameter>

    </parameters>

    <services>
        <!-- Adapters -->
        <service id="cmf_resource.adapter.phpcr_odm" class="%cmf_resource.adapter.phpcr_odm.class%">
            <argument type="service" id="doctrine_phpcr.odm.default_document_manager"/>
            <argument>%cmf_resource.persistence.phpcr.route_basepath%</argument>
        </service>

        <service id="cmf_resource.phpcrodm_auto_route_listener" class="%cmf_resource.phpcrodm_auto_route_listener.class%">
            <argument type="service" id="service_container"/>
            <tag name="doctrine_phpcr.event_listener" event="onFlush"/>
            <tag name="doctrine_phpcr.event_listener" event="endFlush"/>
        </service>

        <service id="cmf_resource.initializer" class="Doctrine\Bundle\PHPCRBundle\Initializer\GenericInitializer">
            <argument>CmfResourceBundle</argument>
            <argument type="collection">
                <argument>%cmf_resource.persistence.phpcr.route_basepath%</argument>
            </argument>
            <tag name="doctrine_phpcr.initializer"/>
        </service>
    </services>
</container>
